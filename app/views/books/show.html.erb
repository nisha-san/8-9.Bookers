<%= render 'layouts/error_messages', obj: @book %>
<div class="row">
  <%= render 'users/user_info', user: @user, book: @book %>
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
      </thead>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "", fallback: "no_image_min.jpg" %><br>
              <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %> </td>
            <td><%= link_to "Destroy", book_path(@book.id), class: "btn-sm btn-danger", method: :delete, data: { confirm: '本当に消しますか？' } %></td>
          <% end %>
        </tr>
    </table>
  </div>
</div>
